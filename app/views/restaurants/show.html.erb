<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @restaurant.user.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone %>
</p>


<%= form_for @reservation, url: restaurant_reservations_path(@restaurant) do |f| %>
	
	  <%= render "reservation_form", f: f %>
<% end %>


<% if current_user && @restaurant.user == current_user %>
  <% @restaurant.reservations.each do |r| %>
  	<p>
	  <strong>Email:</strong>
	  <%= r.email %>
	  <%= link_to 'Destroy', restaurant_reservation_path(restaurant_id: r.restaurant_id, id: r.id), method: :delete, data: { confirm: 'Are you sure?' } %>
	</p>
  <% end %>

  <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<% end %>  
<%= link_to 'Back', restaurants_path %>

